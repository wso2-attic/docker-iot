# set to product base image
FROM wso2iot-base:3.3.0

# expose broker ports
EXPOSE 9446 5675 8675 1886 8836 7614

# set entrypoint to broker startup script
ENTRYPOINT ${WSO2_SERVER_HOME}/bin/broker.sh
